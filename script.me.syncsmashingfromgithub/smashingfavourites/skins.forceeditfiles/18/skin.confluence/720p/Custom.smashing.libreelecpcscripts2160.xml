<?xml version="1.0" encoding="UTF-8"?> <!-- Custom.smashing.libreelecpcscripts2160.xml for conf720 -->
<window type="dialog" id="2160">	<!--  -->
	<defaultcontrol always="true">450</defaultcontrol>
	<onload>XBMC.Action(FirstPage)</onload><!-- <onload>SetFocus(450,0)</onload><!-- jump to the top of the list - alternative is <onclick>SetFocus(0)</onclick> as first action -->
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<depth>DepthSideBlade</depth>
			<animation effect="slide" start="400,0" end="0,0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="400,0" time="300" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<left>330r</left>		<!--  was 400r - reduce and texture is narrower-->
				<top>0</top>
				<width>420</width>
				<height>720</height>	<!--Background colour - shorten and bottom becomes transparent  -->
				<texture border="15,0,0,0" flipx="true">smashingHomeBladeSub.png</texture>
			</control>
			<control type="image">
				<left>280r</left>	<!-- was 370r - reduce number moves more to right-->
				<top>0</top>		<!-- was 30 -->
				<width>200</width>
				<height>180</height>	<!-- was 200 -->
				<aspectratio align="center">keep</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
				<texture>special://masterprofile/smashing/smashingfavourites/icons/libreelecpcscripts.png</texture>		<!-- put icon here --> <!--  <texture>$INFO[Container(450).ListItem.Icon]</texture> if separate icons -->
				<bordertexture border="8">smashingThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
			</control>
			<control type="list" id="450">
				<left>320r</left>	<!--  was 390r -->
				<top>180</top>		<!-- Default 250 - reduce and list moves up-->
				<width>360</width>	<!-- was 450 -->
				<height>480</height>	<!-- Default is 380 - change to 80 and only see 2 entries, 160 see 4-->
				<onup>450</onup>
				<onleft>Dialog.Close(2160)</onleft>
				<onright>450</onright>
				<ondown>450</ondown>
				<pagecontrol></pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>40</height>
						<texture border="5">smashingbutton-nofocus.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>350</width>
						<height>40</height>
						<font>font12_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>40</height>
						<visible>!Control.HasFocus(450)</visible>
						<texture border="3">smashingbutton-nofocus.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>40</height>
						<visible>Control.HasFocus(450)</visible>
						<texture border="3" colordiffuse="$VAR[MainColorOne]">smashingbutton-focus.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>350</width>
						<height>40</height>
						<font>font12_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
				<content>
					<item id="1">
						<label>Previous Menu</label>
                        <onclick>RunScript(special://userdata/smashing/smashingfavourites/scripts/automatedscripts/opendialog.py, back)</onclick>
                        <visible>true</visible>
					</item>
					<item id="2">
						<label>Choose More</label>
                        <onclick>Dialog.Close(2160)</onclick>
                        <onclick>RunScript(special://userdata/smashing/smashingfavourites/scripts/automatedscripts/opendialog.py, 2154)</onclick>
                        <visible>true</visible>
					</item>
					<item id="3">
						<label>Start Windows</label>
                        <onclick>Dialog.Close(2160)</onclick>
                        <onclick>RunScript(special://masterprofile/smashing/smashingfavourites/scripts/libreelecpcscripts/startwindows.py)</onclick>
                        <visible>true</visible>
					</item>
					<item id="4">
						<label>Restart Windows</label>
                        <onclick>Dialog.Close(2160)</onclick>
                        <onclick>RunScript(special://masterprofile/smashing/smashingfavourites/scripts/libreelecpcscripts/restartwindows.py)</onclick>
                        <visible>true</visible>
					</item>
					<item id="5">
						<label>New Restart Windows libreelec1</label>
                        <onclick>Dialog.Close(2160)</onclick>
                        <onclick>RunScript(special://masterprofile/smashing/smashingfavourites/scripts/libreelecpcscripts/newrestartwindows.py, libreelec1)</onclick>
                        <visible>true</visible>
					</item>
				</content>
			</control>
			<control type="label">
				<description>Page label</description>
				<right>30</right>
				<top>670</top>
				<width>350</width>
				<height>30</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>grey</textcolor>
	            <label>[COLOR white]$INFO[Container(450).NumItems] items   -   Page $INFO[Container(450).CurrentPage] of $INFO[Container(450).NumPages]  [/COLOR]</label>
			</control>
		</control>
	</controls>
</window>