<?xml version="1.0" encoding="UTF-8"?> <!-- Customxxxx.xml for estuary -->
<window type="dialog" id="yyyy">	<!--  -->
	<defaultcontrol always="true">450</defaultcontrol>
	<onload>SetFocus(450,0)</onload><!-- jump to the top of the list - alternative is <onclick>SetFocus(0)</onclick> as first action -->
	<coordinates>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<depth>DepthSideBlade</depth>
			<animation effect="slide" start="400,0" end="0,0" time="300" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="400,0" time="300" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<left>400r</left>
				<top>0</top>
				<width>420</width>
				<height>1280</height>	<!--Background colour - shorten and bottom becomes transparent  -->
				<texture border="15,0,0,0" flipx="true">smashingHomeBladeSub.png</texture>
			</control>
			<control type="image">
				<left>370r</left>
				<top>30</top>
				<width>200</width>
				<height>200</height>
				<aspectratio align="center">keep</aspectratio>
				<fadetime>IconCrossfadeTime</fadetime>
				<texture>special://masterprofile/smashing/smashingfavourites/icons/zzzz.png</texture>		<!-- put icon here -->
				<bordertexture border="8">smashingThumbShadow.png</bordertexture>
				<bordersize>8</bordersize>
			</control>
			<control type="list" id="450">
				<left>390r</left>
				<top>250</top>		<!-- Default 250 - reduce and list moves up-->
				<width>450</width>
				<height>940</height>	<!-- Default is 380 - change to 80 and only see 2 entries, 160 see 4-->
				<onup>450</onup>
				<onleft>Dialog.Close(yyyy)</onleft>
				<onright>450</onright>
				<ondown>450</ondown>
				<pagecontrol>-</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="80">         <!-- was 40 -->	         <!-- changing this spaced them out! -->
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>80</height>         <!-- was 40 -->
						<texture border="5">smashingbutton-nofocus.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>350</width>
						<height>80</height>         <!-- was 40 -->
						<font>font36_title</font>	<!-- was 12 -->	   <!-- makes font big when not focused -->
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="80">         <!-- was 40 -->
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>80</height>         <!-- was 40 -->
						<visible>!Control.HasFocus(450)</visible>
						<texture border="3">smashingbutton-nofocus.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>80</height>         <!-- was 40 -->
						<visible>Control.HasFocus(450)</visible>
						<texture border="3" colordiffuse="$VAR[MainColorOne]">smashingbutton-focus.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>350</width>
						<height>80</height>         <!-- was 40 -->
						<font>font45_title</font>         <!-- was 12 -->      <!-- makes font big when focused -->
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
